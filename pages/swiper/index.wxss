.circleProgress_wrapper {
  width: 16px;
  height: 16px;
  margin: 50px auto;
  position: relative;
}

.wrapper {
  width: 8px;
  height: 16px;
  position: absolute;
  top: 0;
  overflow: hidden;
}

.right {
  right: 0;
}

.left {
  left: 0;
}

.circleProgress {
  width: 10px;
  height: 10px;
  border: 3px solid #1ea0ff;
  border-radius: 50%;
  position: absolute;
  top: 0;
  -webkit-transform: rotate(135deg);
}

.rightcircle {
  border-top: 3px solid #ccc;
  border-right: 3px solid #ccc;
  right: 0;
}

.leftcircle {
  border-bottom: 3px solid #ccc;
  border-left: 3px solid #ccc;
  left: 0;
}

@-webkit-keyframes circleProgressLoad_right {
  0% {
    -webkit-transform: rotate(-135deg);
  }

  50%, 100% {
    -webkit-transform: rotate(45deg);
  }
}

@-webkit-keyframes circleProgressLoad_left {
  0%, 50% {
    -webkit-transform: rotate(-135deg);
  }

  100% {
    -webkit-transform: rotate(45deg);
  }
}

.news-wrapper {
  position: fixed;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 0 20rpx 20rpx;
  border-radius: 66rpx 0px 0px 66rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  transition: all .2s .5s linear;
}
.news-wrapper.hide {
  right: -160rpx;
}

.news-wrapper .news_icon {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  background: #1ea0ff;
  border-radius: 50%;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 20rpx;
  margin-right: 20rpx;
}
.news-wrapper .news_icon .news_icon_circle {
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
  transition: all .3s linear;
}
.news-wrapper .news_icon .news_icon_circle.show.left {
  transform: translateX(50rpx);
  opacity: 0;
}
.news-wrapper .news_icon .news_icon_circle.show.right {
  opacity: 0;
  transform: translateX(-50rpx)
}
.news-wrapper .news_icon .news_icon_circle.max {
  width: 12rpx;
  height: 12rpx;
  margin: 0 5rpx;
}
.news-wrapper .news_icon.hide {
  transform-origin: 100% 50%;
  animation: rotateIconHide .5s linear;
}
.news-wrapper .news_icon.show {
  transform-origin: 0 50%;
  animation: rotateIconShow .5s linear;
}
.news-wrapper .news_icon::after {
  position: absolute;
  content: "";
  display: block;
  bottom: 0;
  right: -5rpx;
  width: 0;
  height: 0;
  border-width: 10rpx 0 10rpx 30rpx;
  border-style: solid;
  border-color: transparent transparent transparent #1ea0ff;
}

.news-wrapper .news_span {
  width: 160rpx;
  white-space: nowrap;
  font-size: 24rpx;
}
@keyframes rotateIconShow {
  80% {
    transform: scale3d(.5, 1, 1)
  }
  100% {
    transform: scale3d(1, 1, 1 );
  }
}
@keyframes rotateIconHide {
  80% {
    transform: scale3d(.5, 1, 1)
  }
  100% {
    transform: scale3d(1, 1, 1 );
  }
}