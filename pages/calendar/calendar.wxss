.tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 48px;
  display: flex;
  z-index: 100;
  color: #fff;
  background: #3b3c4e;
  box-shadow: 0 -3px 3px #101225;
}
.tabbar .tabbar-item {
  position: relative;
  flex: 1;
  text-align: center;
  line-height: 48px;
}
.tabbar .cen {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20px;
  width: 50px;
  height: 50px;
  box-shadow: 0 5px 5px #101225;
  background: #3b3c4e;
  border-radius: 50%;
}