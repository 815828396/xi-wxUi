/* pages/loading/loading.wxss */
.local {
  position: relative;
  width: 90%;
  height: 200rpx;
  margin: 0 auto;
  border: 1rpx solid #ccc;
}
.local-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, .7);
}