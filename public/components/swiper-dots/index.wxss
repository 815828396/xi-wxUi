.xi-swiper-dots{position:absolute;bottom:20rpx;width:100%;display:flex;justify-content:center}.xi-swiper-dots .dots{margin:0 10rpx;background:#fff}.xi-swiper-dots .dots.circle{width:15rpx;height:15rpx;border-radius:50%;transition:transform .3s;box-shadow:0 0 10rpx #ccc}.xi-swiper-dots .dots.circle.active{transform:scale(1.3);background:#1EA0FF}.xi-swiper-dots .dots.square{width:15rpx;height:8rpx;transform:skew(-20deg);transition:width .3s}.xi-swiper-dots .dots.square.active{width:30rpx;background:#1EA0FF}