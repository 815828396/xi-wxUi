<!--public/components/button/button.wxml-->
<view class="xi-class button-wrap {{ small ? 'small' : '' }} {{ 'xi-class' }}"
  hover-class="btn--active"
  hover-stay-time="100"
  catchtap="handleClick">
  <view class="button-box {{ type }}">
    <xi-icon
      wx:if="{{ loading }}"
      class="icon {{ loading ? 'loading-rotate' : '' }}"
      iconClass="{{ iconClass }}"
    ></xi-icon>
    <slot></slot>
  </view>
</view>
