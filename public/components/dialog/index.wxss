.dialog-filter {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.1);
  opacity: 0;
  z-index: -100;
  transition: all 0.3s ease-in-out;
}
.dialog-filter--show {
  opacity: 1;
  z-index: 1000;
}
.dialog-filter .dialog_wrap {
  position: relative;
  width: 600rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  opacity: 0;
  transform: translateY(-20rpx);
  transition: all 0.3s ease-in-out;
}
.dialog-filter .dialog_wrap--show {
  opacity: 1;
  transform: translateY(0);
}
.dialog-filter .dialog_wrap .dialog-title {
  display: flex;
  padding: 30rpx 30rpx 0;
}
.dialog-filter .dialog_wrap .dialog-title .title {
  flex-grow: 1;
}
.dialog-filter .dialog_wrap .dialog-title .title.center {
  text-align: center;
}
.dialog-filter .dialog_wrap .dialog_img {
  width: 440rpx;
  height: 440rpx;
  margin: 0 auto;
}
.dialog-filter .dialog_wrap .dialog_img.mt40 {
  margin-top: 40rpx;
}
.dialog-filter .dialog_wrap .dialog_content {
  color: #1EA0FF;
  font-size: 36rpx;
  padding: 30rpx;
}
.dialog-filter .dialog_wrap .dialog_btn {
  display: flex;
}
.dialog-filter .dialog_wrap .dialog_btn .btn {
  flex-grow: 1;
  margin: 30rpx;
}
