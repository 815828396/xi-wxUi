.xi-loading-wrap{display:inline-block}.xi-loading-wrap .loading-bubble{justify-content:center;display:flex;align-items:center;width:70rpx;height:70rpx;background:transparent;border-radius:50%}.xi-loading-wrap .loading-bubble__circle{position:absolute}.xi-loading-wrap .loading-bubble__circle.zoom{width:10rpx;height:10rpx;background:#5dabff;border-radius:50%;animation:zooms 1.5s linear infinite;animation-direction:alternate;box-shadow:0 0 5rpx #76b9fc}.xi-loading-wrap .loading-bubble__circle.shrink{width:70rpx;height:70rpx;background:#76b9fc;border-radius:50%;animation:shrink 1.5s linear infinite;animation-direction:alternate;box-shadow:0 0 5rpx #5dabff}.xi-loading-wrap .rotate{display:inline-block;animation:rotateAll .8s linear infinite}.loading-btn{display:inline-block;background:transparent;padding:0;font-size:24rpx;color:#73737D}.loading-btn::after{border:none}@keyframes zooms{100%{transform:scale(7);opacity:.7}}@keyframes shrink{100%{transform:scale(.1)}}@keyframes rotateAll{to{transform:rotate(360deg)}}