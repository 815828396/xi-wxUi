.xi-checkbox{display:flex;align-items:center;padding:10rpx 0;font-size:28rpx}.xi-checkbox__item{display:flex;align-items:center;justify-content:center;width:30rpx;height:30rpx;border:1rpx solid #C8C8D2;transition:all .3s;margin-right:10rpx}.xi-checkbox__item.circle{line-height:35rpx;border-radius:50%}.xi-checkbox__item.square{border-radius:5rpx}.xi-checkbox__item.square .square-inner{display:inline-block;width:15rpx;height:15rpx;background:#1EA0FF;transform:scale(0);transition:all .3s}.xi-checkbox.xi-checkbox--limit{color:#73737D;text-decoration:none}.xi-checkbox.xi-checkbox--disabled{color:#73737D;text-decoration:line-through}.xi-checkbox.xi-checkbox--disabled .circle,.xi-checkbox.xi-checkbox--disabled .square{background:#F5F5FA}.xi-checkbox.xi-checkbox--checked .circle{border:1rpx solid transparent;background:#1EA0FF;color:#fff}.xi-checkbox.xi-checkbox--checked .square{border:1rpx solid #1EA0FF}.xi-checkbox.xi-checkbox--checked .square .square-inner{transform:scale(1)}.xi-checkbox.xi-checkbox--checked .fzw{opacity:1}.fzw{font-weight:bold;opacity:0}