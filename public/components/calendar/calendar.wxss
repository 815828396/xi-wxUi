.margin-bottom--s {
  margin-bottom: 10rpx
}

.calendar-handle.Dark {
  color: #fff;
}
.calendar-wrap .calendar-title,
.calendar-wrap .calendar-column {
  display: flex;
}
.calendar-wrap .calendar-column.hide {
  display: none;
}
.calendar-wrap .calendar-column[hide *= "hide"] {
  display: none;
}
.calendar-wrap.Dark {
  color: #fff;
}
.calendar-wrap.loading {
  position: relative;
}
.calendar-wrap.loading::after {
  content: "数据加载中...";
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  color: #fff;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar-wrap .calendar-title {
  padding: 30rpx 0;
  color: #8f8ea0;
  font-weight: bold;
  /* background: #f1f1f1; */
  font-size: 22rpx;
}
.calendar-wrap .calendar-list {
  font-size: 26rpx;
}
.calendar-wrap .calendar-title .sub-title,
.calendar-wrap .calendar-column .calendar-item {
  position: relative;
  width: calc(100% / 7);
  flex-shrink: 0;
  text-align: center;
}
.calendar-wrap .calendar-column .calendar-item {
  padding: 17px 0 0;
  /* height: 0; */
  /* height: 40px; */
  /* padding-bottom: calc(100% / 7); */
}
.calendar-wrap .calendar-column .calendar-item .desc {
  font-size: 24rpx;
  display: block;
  height: 17px;
  opacity: 0;
}
.calendar-wrap .calendar-column .calendar-item .desc.showDesc {
  opacity: 1;
}
.calendar-wrap .calendar-column .calendar-item.click {
  background: #4883f1;
  color: #fff;

}
.calendar-wrap .calendar-column .calendar-item.disabled {
  color: #ccc;
  color: #8f8ea0;
  font-size: 22rpx;
}
.calendar-wrap .calendar-column .calendar-item .value {
  /* position: absolute;
  left: 0;
  top: 0;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center; */
  display: block;
  width: 100%;
  font-weight: bold;
  /* height: 100%; */
}
.calendar-wrap .calendar-column .calendar-item .value.log::after {
  content: "";
  position: absolute;
  bottom: 5px;
  left: 50%;
  transform: translateX(-50%);
  width: 5px;
  height: 5px;
  background: #4883f1;
  border-radius: 50%;
}
.calendar-wrap .calendar-column .calendar-item .value.log.a::after {
  background: #f90;
}
/* start 弧度 radius */
.calendar-wrap .calendar-column .calendar-item.radiusAll {
  border-radius: 20%;
}
.calendar-wrap .calendar-column .calendar-item.radius-left {
  border-radius: 20% 0 0 20%;
}
.calendar-wrap .calendar-column .calendar-item.radius-right {
  border-radius: 0 20% 20% 0;
}
.calendar-wrap .calendar-column .calendar-item.division-center {
  opacity: .7;
}
/* end 弧度 */
/* start 背景颜色 */
.calendar-wrap .calendar-column .calendar-item.bgColor {
  font-weight: bold;
  color: #fff;
}
.calendar-wrap .calendar-column .calendar-item.activeHover {
  background: #4883f1;
  color: #fff;
  font-weight: bold;
}
/* 夜间模式 点击选中态 */
.calendar-wrap.Dark .calendar-column .calendar-item.activeHover {
  background: rgba(0, 0, 0, .3);
  box-shadow: 0 3px 2px rgba(0, 0, 0, .2)
}
.calendar-wrap .calendar-column .calendar-item.bg1 {
  background: #99c;
  color: #fff;
}
.calendar-wrap .calendar-column .calendar-item.bg2 {
  color: #e6438c;
  font-weight: bold;
  border: 1px solid #e6438c;
  background: #fff;
  /* background: #e6438c;
  box-shadow: 0 0 5px 2px #e63b82bf, 0 0 5px 1px #e63b8236; */
}
.calendar-wrap .calendar-column .calendar-item.bg3 {
  background: #4883f1;
  box-shadow: 0 0 5px 2px #4883f1, 0 0 5px 1px #6396f5;
}
/* end 背景颜色 */
.click-hover {
  background: #f1f1f1;
}
